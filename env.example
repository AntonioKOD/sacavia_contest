# Contest App Environment Variables - Production Ready
# Copy this file to .env.local and fill in your values

# Main App Configuration (REQUIRED)
NEXT_PUBLIC_MAIN_APP_URL=https://sacavia.com
NEXT_PUBLIC_CONTEST_APP_URL=https://vote.sacavia.com
NEXT_PUBLIC_API_BASE_URL=https://sacavia.com/api

# Database Configuration (REQUIRED - Must match main app)
# Note: Contest app reads JWT tokens from main app for SSO
PAYLOAD_SECRET=your-payload-secret-here-must-match-main-app

# Session Management (REQUIRED)
SESSION_PASSWORD=your-super-secure-session-password-at-least-32-characters-long

# SSO Configuration (REQUIRED - Must match main app)
SSO_JWT_SECRET=your-sso-jwt-secret-shared-with-core-app-must-match-main-app
SSO_ISSUER=sacavia-core
SSO_AUDIENCE=sacavia-contest

# External Services (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_CONTEST_CREATION=true
NEXT_PUBLIC_ENABLE_VOTING=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true
